<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minha Conta</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/cabecalho.css">
    <link rel="stylesheet" href="/css/minhaConta.css">
</head>

<body>
    <section id="container">

       <%- include('./partials/cabecalho.ejs') %>

        <div id="organizador">
            <div id="container-foto">
                <!-- <img id="foto-perfil" src="/images/estilos/fundo-de-bar.jpg" alt=""> -->
                <form action="/usuario/minhaconta" method="POST" enctype="multipart/form-data">
                    <input type="file" name="foto-perfil" id="foto-Perfil">
                    <button type="submit">Enviar</button>
                </form>
                <p>Bem vindo, <%=usuario.nome%></p>
            </div>
            <div id="area-edicao">
                <h1>Suas Informações:</h1>
                <form  action="/usuario/minhaconta" id="form-edicao" method="post">
                    <div id="organizador-form">
                        <div class="form-style">
                            <label for="nome_completo" id="label-nome"> Nome:</label>
                            <input type="text" class="input-form" name="nome" id="input-nome" value="<%=usuario.nome%>">
    
                            <label for="email" id="label-email">Email:</label>
                            <input type="email" class="input-form" name="email" id="input-email" value="<%=usuario.email%>">
                        </div>
                        <div class="form-style">
                            <label for="sobrenome" id="label-sobrenome">Sobrenome:</label>
                            <input type="text" class="input-form" name="sobrenome" id="input-sobrenome" value="<%=usuario.sobrenome%>">
    
                            <label for="cpf" id="label-cpf">CPF:</label>
                            <input type="text" class="input-form" name="cpf" id="input-cpf" value="<%=usuario.cpf%>">
                        </div>
                    </div>
                    <div id="senha-style">
                        <label for="senha" id="label-senha">Senha:</label>
                        <input type="password" class="input-form" name="senha" id="input-senha">
                    </div>
                    <button type="submit">Atualizar</button>
                </form>
            </div>
        </div>
    </section>
</body>

</html>